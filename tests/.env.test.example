# Test Environment Configuration
# Copy this file to .env.test and fill in your values

# ==============================================================================
# Keycloak Configuration (Required)
# ==============================================================================
KEYCLOAK_URL=https://auth.your-domain.com
KEYCLOAK_REALM=uchub
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=your_admin_password_here
KEYCLOAK_CLIENT_ID=admin-cli

# ==============================================================================
# Stripe Configuration (Required for payment tests)
# ==============================================================================
# Use TEST mode keys only! Never use production keys in tests!
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==============================================================================
# Lago Configuration (Optional - for webhook signature verification)
# ==============================================================================
LAGO_WEBHOOK_SECRET=your_lago_webhook_secret_here
LAGO_API_KEY=your_lago_api_key_here

# ==============================================================================
# BYOK Configuration (Required for BYOK tests)
# ==============================================================================
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# ==============================================================================
# Base URL Configuration
# ==============================================================================
BASE_URL=http://localhost:8084
API_VERSION=v1

# ==============================================================================
# Test Configuration
# ==============================================================================
# Test user password (used for all test users)
TEST_USER_PASSWORD=TestPassword123!

# Test mode flags
STRIPE_TEST_MODE=true
DEBUG_MODE=false

# Timeouts (in seconds)
HTTP_TIMEOUT=30
WEBHOOK_TIMEOUT=10

# ==============================================================================
# Optional: Custom Test Configuration
# ==============================================================================
# Number of test users per tier
TEST_USERS_PER_TIER=1

# Enable/disable specific test categories
RUN_E2E_TESTS=true
RUN_INTEGRATION_TESTS=true
RUN_WEBHOOK_TESTS=true
RUN_LOAD_TESTS=false

# Test data cleanup
AUTO_CLEANUP=true
KEEP_TEST_DATA=false
