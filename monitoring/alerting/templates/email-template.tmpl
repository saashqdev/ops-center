{{ define "email.critical.html" }}
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background: #E01E5A; color: white; padding: 20px; border-radius: 5px 5px 0 0; }
    .content { background: #f9f9f9; padding: 20px; border: 1px solid #ddd; }
    .alert { background: #fff; border-left: 4px solid #E01E5A; padding: 15px; margin: 10px 0; }
    .label { font-weight: bold; color: #666; }
    .value { color: #333; }
    .footer { background: #f1f1f1; padding: 15px; text-align: center; border-radius: 0 0 5px 5px; font-size: 12px; }
    .button { display: inline-block; padding: 10px 20px; background: #E01E5A; color: white; text-decoration: none; border-radius: 4px; margin: 5px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>üö® CRITICAL ALERT</h1>
      <p>{{ .GroupLabels.alertname }}</p>
    </div>
    <div class="content">
      <p><strong>{{ .Alerts.Firing | len }} alert(s) firing</strong></p>

      {{ range .Alerts }}
      <div class="alert">
        <h3>{{ .Annotations.summary }}</h3>
        <p>{{ .Annotations.description }}</p>

        <table style="width: 100%; margin-top: 15px;">
          <tr>
            <td class="label">Severity:</td>
            <td class="value">{{ .Labels.severity | toUpper }}</td>
          </tr>
          <tr>
            <td class="label">Service:</td>
            <td class="value">{{ .Labels.service }}</td>
          </tr>
          <tr>
            <td class="label">Component:</td>
            <td class="value">{{ .Labels.component }}</td>
          </tr>
          <tr>
            <td class="label">Instance:</td>
            <td class="value">{{ .Labels.instance }}</td>
          </tr>
          <tr>
            <td class="label">Started:</td>
            <td class="value">{{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</td>
          </tr>
        </table>

        {{ if .Annotations.runbook }}
        <p style="margin-top: 15px;">
          <a href="{{ .Annotations.runbook }}" class="button">View Runbook</a>
          <a href="https://monitoring.your-domain.com" class="button">Open Monitoring</a>
        </p>
        {{ end }}
      </div>
      {{ end }}
    </div>
    <div class="footer">
      <p>Alertmanager | Ops-Center Production Monitoring</p>
      <p><a href="https://your-domain.com">your-domain.com</a></p>
    </div>
  </div>
</body>
</html>
{{ end }}

