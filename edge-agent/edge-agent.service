[Unit]
Description=Ops-Center Edge Agent
After=network.target docker.service
Wants=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/edge-agent
ExecStart=/opt/edge-agent/venv/bin/python3 /opt/edge-agent/edge_agent.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/etc/edge-agent /var/log/edge-agent

[Install]
WantedBy=multi-user.target
