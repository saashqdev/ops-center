# Production Environment Configuration
# For production deployment

ENVIRONMENT=production
NODE_ENV=production
DEBUG=false

# Production URLs
APP_URL=https://your-domain.com
KEYCLOAK_EXTERNAL_URL=https://auth.your-domain.com
LAGO_PUBLIC_URL=https://billing-api.your-domain.com

# Database (production)
POSTGRES_DB=ops_center_db

# Redis (production instance)
REDIS_DB=0

# Keycloak (production)
KEYCLOAK_REALM=uchub

# Stripe (LIVE KEYS - be careful!)
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...

# Security (strict in production)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
CORS_ORIGINS=https://your-domain.com,https://app1.your-domain.com,https://app2.your-domain.com

# Rate limiting (enabled in production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging (production level)
LOG_LEVEL=INFO
LOG_FORMAT=json

# Email (production)
EMAIL_PROVIDER=smtp
SMTP_FROM_EMAIL=noreply@your-domain.com

# Feature Flags (production)
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_API_KEYS=true
ENABLE_IMPERSONATION=false  # Disabled in production for security
ENABLE_BULK_OPERATIONS=true
ENABLE_BILLING=true

# Monitoring (enabled in production)
METRICS_ENABLED=true
SENTRY_ENVIRONMENT=production

# Production optimizations
DB_POOL_MIN=5
DB_POOL_MAX=20
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600
