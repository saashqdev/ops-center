# Development Environment Configuration
# For local development

ENVIRONMENT=development
NODE_ENV=development
DEBUG=true
HOT_RELOAD=true

# Local URLs
APP_URL=http://localhost:8084
KEYCLOAK_EXTERNAL_URL=http://localhost:9000
LAGO_PUBLIC_URL=http://localhost:3000

# Database (local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=unicorn_dev_db

# Redis (local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Keycloak (local)
KEYCLOAK_URL=http://localhost:9000
KEYCLOAK_REALM=uchub-dev

# Security (relaxed for development)
SESSION_COOKIE_SECURE=false
CORS_ORIGINS=http://localhost:5173,http://localhost:8084,http://localhost:3000

# Rate limiting (disabled for development)
RATE_LIMIT_ENABLED=false

# Logging (verbose for development)
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Email (mock email in development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_PROVIDER=console  # Print to console instead of sending

# Feature Flags (all enabled in development)
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_API_KEYS=true
ENABLE_IMPERSONATION=true
ENABLE_BULK_OPERATIONS=true
ENABLE_BILLING=true
SKIP_AUTH=false  # Set to true to bypass auth for testing

# Monitoring (disabled in development)
METRICS_ENABLED=false
SENTRY_DSN=

# Development helpers
AUTO_RELOAD=true
SHOW_SQL_QUERIES=true
