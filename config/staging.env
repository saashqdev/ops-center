# Staging Environment Configuration
# Inherits from .env.example, overrides specific values

ENVIRONMENT=staging
NODE_ENV=production
DEBUG=false

# Staging URLs
APP_URL=https://staging.your-domain.com
KEYCLOAK_EXTERNAL_URL=https://auth-staging.your-domain.com
LAGO_PUBLIC_URL=https://billing-api-staging.your-domain.com

# Staging Keycloak
KEYCLOAK_REALM=ops-center-staging

# Database (separate staging database)
POSTGRES_DB=ops_center_staging_db

# Redis (separate staging instance)
REDIS_DB=1

# Stripe (use test keys in staging)
STRIPE_PUBLISHABLE_KEY=pk_test_staging
STRIPE_SECRET_KEY=sk_test_staging

# Email (use test email in staging)
SMTP_FROM_EMAIL=staging@your-domain.com

# Security (less restrictive in staging)
SESSION_COOKIE_SECURE=false  # Allow HTTP in staging
CORS_ORIGINS=https://staging.your-domain.com,http://localhost:5173

# Logging (more verbose in staging)
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# Feature Flags (test new features in staging)
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_API_KEYS=true
ENABLE_IMPERSONATION=true
ENABLE_BULK_OPERATIONS=true
ENABLE_BILLING=true

# Monitoring
SENTRY_ENVIRONMENT=staging
